# =============================================================================
# SesAI Platform Configuration
# =============================================================================
# Copy this file to .env and adjust the values for your environment.

# -----------------------------------------------------------------------------
# Speech-to-Text (STT) Configuration
# -----------------------------------------------------------------------------
STT_MODEL=large-v3-turbo
STT_DEVICE=cuda
STT_COMPUTE_TYPE=int8

# -----------------------------------------------------------------------------
# Text-to-Speech (TTS) Configuration - Chatterbox TTS
# -----------------------------------------------------------------------------
# Chatterbox TTS - MIT License, supports Turkish and voice cloning
TTS_DEVICE=cuda
TTS_LANGUAGE=tr
# Optional: Path to reference audio for voice cloning
# TTS_REFERENCE_AUDIO=/path/to/reference.wav

# -----------------------------------------------------------------------------
# Large Language Model (LLM) Configuration
# -----------------------------------------------------------------------------
VLLM_BASE_URL=http://localhost:8000/v1
LLM_MODEL=Qwen/Qwen3-8B-AWQ
LLM_MAX_TOKENS=256
LLM_TEMPERATURE=0.7

# -----------------------------------------------------------------------------
# Audio Configuration
# -----------------------------------------------------------------------------
TELEPHONY_SAMPLE_RATE=8000
MODEL_SAMPLE_RATE=16000
TTS_SAMPLE_RATE=24000
FRAME_DURATION_MS=20

# -----------------------------------------------------------------------------
# Telephony (AudioSocket) Configuration
# -----------------------------------------------------------------------------
AUDIOSOCKET_HOST=0.0.0.0
AUDIOSOCKET_PORT=8765

# -----------------------------------------------------------------------------
# Agent Configuration
# -----------------------------------------------------------------------------
SYSTEM_PROMPT=Sen yardimci bir Turkce musteri hizmetleri asistanisin. Nazik ve profesyonel bir sekilde kullanicilara yardimci ol.

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
